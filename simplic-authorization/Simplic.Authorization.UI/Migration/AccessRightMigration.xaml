<Window x:Class="Simplic.Authorization.UI.Migration.AccessRightMigration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simplic.Authorization.UI.Migration"
        mc:Ignorable="d" SizeToContent="Height" WindowStartupLocation="CenterScreen"
        Title="Migration Benutzerberechtigungen" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock TextWrapping="Wrap" Grid.Row="0" Text="Die System- und Datenberechtigungen werden migriert. Dieser Vorgang kann einige Minuten bis Stunden in Anspruch nehmen" />
        <ProgressBar Margin="2" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsIndeterminate="True" MinHeight="24" />
    </Grid>
</Window>
